package rules.recommendation;

import com.ftn.sbnz.model.Server;
import com.ftn.sbnz.model.SearchFilters;

template "eliminate-unsuitable-servers"

rule "Eliminate by budget_@{row.index}"
    when
        $s: Server(pricePerMonth > @{maxPrice})
        $f: SearchFilters(budget == SearchFilters.Budget.valueOf("@{budgetName}"))
    then
        retract($s);
        System.out.println("Server " + $s.getName() + " eliminated due to budget constraints.");
end

end template
